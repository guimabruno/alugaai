    <ImageView
        android:layout_marginTop="30dp"
        android:id="@+id/logo_icone"
        android:src="@drawable/icone"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"/>
<!--        android:layout_below="@id/btMenu"-->


    <TextView
        android:id="@+id/textViewAlugaAi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aluga ai"
        android:layout_below="@id/logo_icone"
        android:layout_centerHorizontal="true"
        android:textSize="45dp"
        android:textColor="#ff6600"
        android:textStyle="bold"
        tools:ignore="SpUsage" />
    <TextView
        android:id="@+id/textViewAluga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewAlugaAi"
        android:layout_centerHorizontal="true"
        android:text="aluguel de veiculos"
        android:layout_marginBottom="60dp"
        android:textColor="#ff6600"
