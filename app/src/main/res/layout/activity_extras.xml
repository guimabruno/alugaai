    <Button
        android:id="@+id/btMensagens"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btHistContratos"
        android:text="MENSAGENS"
        android:layout_gravity="center"
        android:backgroundTint="@color/orange"/>

    <Button
        android:id="@+id/btCarteira"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btMensagens"
        android:text="CARTEIRA"
        android:layout_gravity="center"
        android:backgroundTint="@color/orange"/>

    <ImageView
        android:id="@+id/btVoltar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/button_voltar"
        android:layout_marginTop="16dp"/>

